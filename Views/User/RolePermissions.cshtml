@model EmployeeCrudApp.Models.RolePermissionsViewModel
@using Microsoft.AspNetCore.Mvc.Localization
@inject IViewLocalizer Localizer

@{
    ViewData["Title"] = Localizer["Role Permissions"];
}

<div class="container-fluid py-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <div>
            <h2 class="fw-bold mb-1">@Localizer["Role-Based Access Control"]</h2>
            <p class="text-muted small">@Localizer["Manage widget permissions and view users assigned to each system role."]</p>
        </div>
        <a asp-action="Index" class="btn btn-outline-secondary rounded-pill px-4">
            <i class="bi bi-arrow-left me-2"></i>@Localizer["Back to Users"]
        </a>
    </div>

    <div class="row g-4">
        @foreach (var role in Model.Roles)
        {
            <div class="col-xl-6">
                <div class="card border-0 shadow-sm rounded-4 overflow-hidden h-100 role-card" data-role-id="@role.RoleId">
                    <div class="card-header bg-primary bg-opacity-10 border-0 p-4 d-flex justify-content-between align-items-center">
                        <div>
                            <h4 class="fw-bold mb-0 text-primary">@role.RoleName</h4>
                        </div>
                        <div class="role-icon-circle bg-white shadow-sm">
                            <i class="bi bi-shield-lock-fill text-primary fs-4"></i>
                        </div>
                    </div>
                    <div class="card-body p-4">
                        <div>
                            <h6 class="fw-bold small text-muted text-uppercase ls-1 mb-3">@Localizer["Widget Permissions"]</h6>
                            <div class="row g-2">
                                @foreach (var widget in Model.AllAvailableWidgets)
                                {
                                    <div class="col-6">
                                        <div class="form-check custom-checkbox p-2 rounded-3 border">
                                            <input class="form-check-input ms-0" type="checkbox" value="@widget" 
                                                   id="chk-@role.RoleId-@widget.Replace(" ", "-")" 
                                                   @(role.PermittedWidgets.Contains(widget) ? "checked" : "")>
                                            <label class="form-check-label small fw-bold ms-2" for="chk-@role.RoleId-@widget.Replace(" ", "-")">
                                                @Localizer[widget]
                                            </label>
                                        </div>
                                    </div>
                                }
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        }
    </div>

    <!-- Floating Save Button -->
    <div class="position-sticky bottom-0 bg-transparent py-4 text-center mt-4">
        <button onclick="saveAllPermissions()" class="btn btn-primary btn-lg rounded-pill px-5 shadow-lg fw-bold">
            <i class="bi bi-save2-fill me-2"></i>@Localizer["Save All Role Permissions"]
        </button>
    </div>
</div>

<style>
    .role-card {
        transition: transform 0.3s ease;
    }
    .role-card:hover {
        transform: translateY(-5px);
    }
    .role-icon-circle {
        width: 50px;
        height: 50px;
        display: flex;
        align-items: center;
        justify-content: center;
        border-radius: 15px;
    }
    .ls-1 { letter-spacing: 1px; }
    .custom-checkbox {
        transition: all 0.2s ease;
        cursor: pointer;
    }
    .custom-checkbox:hover {
        background-color: rgba(13, 110, 253, 0.05);
        border-color: rgba(13, 110, 253, 0.2) !important;
    }
    .form-check-input {
        cursor: pointer;
    }
    [data-theme="dark"] .bg-light {
        background-color: rgba(255, 255, 255, 0.05) !important;
    }
    [data-theme="dark"] .border {
        border-color: rgba(255, 255, 255, 0.1) !important;
    }
</style>

@section Scripts {
    <script>
        function saveAllPermissions() {
            const updates = [];
            document.querySelectorAll('.role-card').forEach(card => {
                const roleId = parseInt(card.dataset.roleId);
                const permittedWidgets = [];
                card.querySelectorAll('input[type="checkbox"]:checked').forEach(chk => {
                    permittedWidgets.push(chk.value);
                });
                updates.push({ RoleId: roleId, PermittedWidgets: permittedWidgets });
            });

            fetch('@Url.Action("SaveRolePermissions", "User")', {
                method: 'POST',
                headers: { 'Content-Type': 'application/json' },
                body: JSON.stringify(updates)
            })
            .then(response => response.json())
            .then(res => {
                if (res.success) {
                    alert(res.message);
                    location.reload();
                } else {
                    alert('Error: ' + res.message);
                }
            })
            .catch(error => {
                console.error('Error:', error);
                alert('Failed to save permissions.');
            });
        }
    </script>
}
