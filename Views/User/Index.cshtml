@model IEnumerable<EmployeeCrudApp.Models.User>

@using Microsoft.AspNetCore.Mvc.Localization
@inject IViewLocalizer Localizer
@{
    ViewData["Title"] = Localizer["User Management"];
}

<div class="container mt-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <div>
            <h1 class="mb-0 fw-bold">@Localizer["User Management"]</h1>
            <p class="text-muted small mb-0">@Localizer["Manage system access and account statuses"]</p>
        </div>
        <div class="d-flex gap-2">
            <button type="button" class="btn btn-primary rounded-pill px-4 shadow-sm fw-bold" onclick="openAddUserModal()">
                <i class="bi bi-person-plus-fill me-2"></i>@Localizer["Add User"]
            </button>
            <a asp-action="RolePermissions" class="btn btn-outline-primary rounded-pill px-4 shadow-sm fw-bold">
                <i class="bi bi-shield-lock-fill me-2"></i>@Localizer["Role Permissions"]
            </a>
            @if (ViewBag.FilterType == "today")
            {
                <a asp-action="Index" asp-route-filter="" class="btn btn-secondary rounded-pill px-4 shadow-sm fw-bold">
                    <i class="bi bi-arrow-counterclockwise me-2"></i>@Localizer["Show All"]
                </a>
            }
            else
            {
                <a asp-action="Index" asp-route-filter="today" class="btn btn-info rounded-pill px-4 shadow-sm fw-bold text-white">
                    <i class="bi bi-clock-history me-2"></i>@Localizer["Users Today"]
                </a>
            }
            <a asp-controller="Dashboard" asp-action="Index" class="btn btn-primary rounded-pill px-4 shadow-sm fw-bold">
                <i class="bi bi-speedometer2 me-2"></i>@Localizer["Dashboard"]
            </a>
        </div>
    </div>

    <div class="card glass-card border-0 shadow-lg rounded-4 overflow-hidden">
        <div class="table-responsive">
            <table class="table table-hover mb-0">
                <thead>
                    <tr>
                        <th class="ps-4">
                            <a asp-action="Index" asp-route-sortOrder="@ViewBag.NameSortParm" asp-route-currentFilter="@ViewBag.CurrentFilter" asp-route-filter="@ViewBag.FilterType" class="text-decoration-none text-muted d-block w-100">
                                @Localizer["User Details"] <i class="bi bi-arrow-down-up small ms-1 opacity-50"></i>
                            </a>
                        </th>
                        <th>
                            <a asp-action="Index" asp-route-sortOrder="@ViewBag.EmailSortParm" asp-route-currentFilter="@ViewBag.CurrentFilter" asp-route-filter="@ViewBag.FilterType" class="text-decoration-none text-muted d-block w-100">
                                @Localizer["Email Address"] <i class="bi bi-arrow-down-up small ms-1 opacity-50"></i>
                            </a>
                        </th>
                        <th class="text-center">
                            <a asp-action="Index" asp-route-sortOrder="@ViewBag.LoginSortParm" asp-route-currentFilter="@ViewBag.CurrentFilter" asp-route-filter="@ViewBag.FilterType" class="text-decoration-none text-muted d-block w-100">
                                @Localizer["Logins"] <i class="bi bi-arrow-down-up small ms-1 opacity-50"></i>
                            </a>
                        </th>
                        <th>
                            <a asp-action="Index" asp-route-sortOrder="@ViewBag.DateSortParm" asp-route-currentFilter="@ViewBag.CurrentFilter" asp-route-filter="@ViewBag.FilterType" class="text-decoration-none text-muted d-block w-100">
                                @Localizer["Last Login Date"] <i class="bi bi-arrow-down-up small ms-1 opacity-50"></i>
                            </a>
                        </th>
                        <th>@Localizer["Time"]</th>
                        <th>@Localizer["Account Status"]</th>
                        <th class="pe-4 text-end">@Localizer["Actions"]</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var user in Model)
                    {
                        <tr>
                            <td class="ps-4 py-3">
                                <div class="d-flex align-items-center">
                                    @{
                                        var roleClass = user.RoleId == 1 ? "danger" : 
                                                       user.RoleId == 3 ? "secondary" : 
                                                       user.RoleId == 4 ? "success" : "primary";
                                    }
                                    <div class="avatar-circle me-3 bg-@roleClass bg-opacity-25 text-@roleClass fw-bold">
                                        @user.Name.Substring(0, Math.Min(1, user.Name.Length)).ToUpper()
                                    </div>
                                    <div class="fw-bold">
                                        @user.Name
                                        <span class="badge bg-@roleClass ms-2" style="font-size: 0.6rem;">@Localizer[user.Role.ToUpper()]</span>
                                    </div>
                                </div>
                            </td>
                            <td>@user.Email</td>
                            <td class="text-center">
                                <span class="badge bg-secondary bg-opacity-10 text-secondary border border-secondary border-opacity-25 px-3 py-2 rounded-pill">
                                    @user.LoginCount
                                </span>
                            </td>
                            <td>
                                @if (user.LastLoginDate.HasValue)
                                {
                                    <span class="text-muted small"><i class="bi bi-calendar3 me-1"></i>@user.LastLoginDate.Value.ToString("MMM dd, yyyy")</span>
                                }
                                else
                                {
                                    <span class="text-muted small fst-italic">@Localizer["Never"]</span>
                                }
                            </td>
                            <td>
                                @if (user.LastLoginDate.HasValue)
                                {
                                    <span class="text-muted small"><i class="bi bi-clock me-1"></i>@user.LastLoginDate.Value.ToString("hh:mm tt")</span>
                                }
                                else
                                {
                                    <span class="text-muted small">--</span>
                                }
                            </td>
                            <td>
                                @if (user.IsEmailVerified)
                                {
                                    <span class="badge rounded-pill bg-success bg-opacity-10 text-success border border-success border-opacity-25 px-3 py-2">
                                        <i class="bi bi-patch-check-fill me-1"></i> @Localizer["Verified"]
                                    </span>
                                }
                                else
                                {
                                    <span class="badge rounded-pill bg-warning bg-opacity-10 text-warning border border-warning border-opacity-25 px-3 py-2">
                                        <i class="bi bi-clock-history me-1"></i> @Localizer["Pending"]
                                    </span>
                                }
                            </td>
                            <td class="pe-4 text-end">
                                <div class="btn-group gap-2">
                                    <a asp-action="Details" asp-route-id="@user.Id" class="action-icon" title="@Localizer["Details"]">
                                        <i class="bi bi-eye-fill"></i>
                                    </a>
                                    <button onclick="openLoginHistory(@user.Id, '@user.Name')" class="btn btn-link action-icon p-0 border-0" title="@Localizer["Login History"]">
                                        <i class="bi bi-clock-history"></i>
                                    </button>
                                    <a asp-action="Edit" asp-route-id="@user.Id" class="action-icon" title="@Localizer["Edit"]">
                                        <i class="bi bi-pencil-fill"></i>
                                    </a>
                                    <a asp-action="Delete" asp-route-id="@user.Id" class="action-icon" title="@Localizer["Delete"]">
                                        <i class="bi bi-trash-fill"></i>
                                    </a>
                                </div>
                            </td>
                        </tr>
                    }
                    @if (!Model.Any())
                    {
                        <tr>
                            <td colspan="7" class="text-center py-5 text-muted fst-italic">
                                <i class="bi bi-people fs-1 d-block mb-2"></i>
                                @if (ViewBag.FilterType == "today")
                                {
                                    <span class="d-block text-muted">@Localizer["No users logged in today."]</span>
                                }
                                else
                                {
                                    <span class="d-block text-muted">@Localizer["No users found in the system."]</span>
                                }
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>

<!-- Login History Modal -->
<div class="modal fade" id="loginHistoryModal" tabindex="-1" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered">
        <div class="modal-content border-0 shadow-lg rounded-4 overflow-hidden">
            <div class="modal-header bg-primary text-white">
                <h5 class="modal-title fw-bold">
                    <i class="bi bi-clock-history me-2"></i>@Localizer["Login History"] - <span id="historyUserName"></span>
                </h5>
                <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body p-0">
                <div class="d-flex justify-content-end p-2 bg-light border-bottom">
                    <div class="btn-group btn-group-sm" role="group">
                        <button type="button" class="btn btn-outline-primary active" onclick="loadLoginHistory(currentUserId, 'all')" id="filterAll">@Localizer["All"]</button>
                        <button type="button" class="btn btn-outline-primary" onclick="loadLoginHistory(currentUserId, '7days')" id="filter7">@Localizer["Last 7 Days"]</button>
                        <button type="button" class="btn btn-outline-primary" onclick="loadLoginHistory(currentUserId, '30days')" id="filter30">@Localizer["Last 30 Days"]</button>
                    </div>
                </div>
                <div id="loginHistoryContent" class="p-0" style="max-height: 400px; overflow-y: auto;">
                    <div class="text-center py-5">
                        <div class="spinner-border text-primary" role="status">
                            <span class="visually-hidden">Loading...</span>
                        </div>
                    </div>
                </div>
            </div>

            </div>
        </div>
    </div>
</div>

<!-- Add User Modal -->
<div class="modal fade" id="addUserModal" tabindex="-1" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered">
        <div class="modal-content border-0 shadow-lg rounded-4 overflow-hidden">
            <div class="modal-header bg-primary text-white p-4">
                <h5 class="modal-title fw-bold">
                    <i class="bi bi-person-plus-fill me-2"></i>@Localizer["Create New User"]
                </h5>
                <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body p-4 bg-light">
                <form id="addUserForm" onsubmit="saveNewUser(event)">
                    <div class="mb-3">
                        <label class="form-label fw-bold small">@Localizer["Full Name"]</label>
                        <div class="input-group">
                            <span class="input-group-text bg-white border-0 shadow-sm"><i class="bi bi-person text-primary"></i></span>
                            <input type="text" name="Name" class="form-control border-0 shadow-sm p-3" placeholder="@Localizer["Enter full name"]" required>
                        </div>
                    </div>
                    <div class="mb-3">
                        <label class="form-label fw-bold small">@Localizer["Email Address"]</label>
                        <div class="input-group">
                            <span class="input-group-text bg-white border-0 shadow-sm"><i class="bi bi-envelope text-primary"></i></span>
                            <input type="email" name="Email" class="form-control border-0 shadow-sm p-3" placeholder="@Localizer["Enter email address"]" required>
                        </div>
                    </div>
                    <div class="mb-3">
                        <label class="form-label fw-bold small">@Localizer["Password"]</label>
                        <div class="input-group">
                            <span class="input-group-text bg-white border-0 shadow-sm"><i class="bi bi-lock text-primary"></i></span>
                            <input type="password" name="Password" class="form-control border-0 shadow-sm p-3" placeholder="@Localizer["Create password"]" required>
                        </div>
                    </div>
                    <div class="mb-4">
                        <label class="form-label fw-bold small">@Localizer["System Role"]</label>
                        <div class="input-group">
                            <span class="input-group-text bg-white border-0 shadow-sm"><i class="bi bi-shield-lock text-primary"></i></span>
                            <select name="RoleId" id="roleSelect" class="form-select border-0 shadow-sm p-3" required onchange="onRoleChange()">
                                <option value="">@Localizer["Select a role"]</option>
                            </select>
                        </div>
                    </div>

                    <div class="mb-4">
                        <label class="form-label fw-bold small d-block mb-3">
                            <i class="bi bi-grid-3x3-gap-fill me-2 text-primary"></i>@Localizer["Widget Permissions"]
                        </label>
                        <div id="widgetContainer" class="row g-2 p-3 bg-white rounded-4 shadow-sm border-0">
                            <!-- Widgets will be loaded here -->
                            <div class="text-center py-3 w-100">
                                <div class="spinner-border spinner-border-sm text-primary" role="status"></div>
                            </div>
                        </div>
                    </div>

                    <div class="d-grid mt-4">
                        <button type="submit" class="btn btn-primary rounded-pill py-3 fw-bold shadow border-0">
                            @Localizer["Create Account"]
                        </button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

<script>
    var currentUserId = 0;
    var loginHistoryModal;
    var addUserModal;
    var allRoles = [];

    document.addEventListener("DOMContentLoaded", function() {
        loginHistoryModal = new bootstrap.Modal(document.getElementById('loginHistoryModal'));
        addUserModal = new bootstrap.Modal(document.getElementById('addUserModal'));
    });

    function openAddUserModal() {
        // Fetch widgets first
        fetch('@Url.Action("GetAvailableWidgets", "User")')
            .then(response => response.json())
            .then(widgets => {
                const container = document.getElementById('widgetContainer');
                container.innerHTML = '';
                widgets.forEach(widget => {
                    const col = document.createElement('div');
                    col.className = 'col-6';
                    col.innerHTML = `
                        <div class="form-check custom-checkbox">
                            <input class="form-check-input" type="checkbox" name="PermittedWidgets" value="${widget}" id="new-user-chk-${widget.replace(/\s+/g, '-').replace(/\//g, '-')}">
                            <label class="form-check-label small fw-bold" for="new-user-chk-${widget.replace(/\s+/g, '-').replace(/\//g, '-')}">
                                ${widget}
                            </label>
                        </div>
                    `;
                    container.appendChild(col);
                });

                // Then fetch roles
                return fetch('@Url.Action("GetRoles", "User")');
            })
            .then(response => response.json())
            .then(roles => {
                allRoles = roles;
                const select = document.getElementById('roleSelect');
                select.innerHTML = '<option value="">@Localizer["Select a role"]</option>';
                roles.forEach(role => {
                    const opt = document.createElement('option');
                    opt.value = role.id;
                    opt.text = role.name;
                    select.appendChild(opt);
                });
                
                // Initialize widget state (all disabled initially since no role is selected)
                onRoleChange();
                
                addUserModal.show();
            });
    }

    function onRoleChange() {
        const roleId = document.getElementById('roleSelect').value;
        const role = allRoles.find(r => r.id == roleId);
        const checkboxes = document.querySelectorAll('#widgetContainer input[type="checkbox"]');
        
        if (role && role.defaultWidgets) {
            checkboxes.forEach(chk => {
                const isPermitted = role.defaultWidgets.includes(chk.value);
                chk.disabled = !isPermitted;
                chk.checked = isPermitted;
                
                // Visual feedback for disabled state
                const label = chk.closest('.form-check').querySelector('.form-check-label');
                if (!isPermitted) {
                    label.classList.add('text-muted');
                    label.style.opacity = '0.5';
                } else {
                    label.classList.remove('text-muted');
                    label.style.opacity = '1';
                }
            });
        } else {
            // Disable all if no role selected
            checkboxes.forEach(chk => {
                chk.disabled = true;
                chk.checked = false;
                const label = chk.closest('.form-check').querySelector('.form-check-label');
                label.classList.add('text-muted');
                label.style.opacity = '0.5';
            });
        }
    }

    function saveNewUser(event) {
        event.preventDefault();
        const formData = new FormData(event.target);
        
        // Convert FormData to object correctly for array property
        const data = {
            Name: formData.get('Name'),
            Email: formData.get('Email'),
            Password: formData.get('Password'),
            RoleId: parseInt(formData.get('RoleId')),
            PermittedWidgets: formData.getAll('PermittedWidgets')
        };

        fetch('@Url.Action("CreateAjax", "User")', {
            method: 'POST',
            headers: { 'Content-Type': 'application/json' },
            body: JSON.stringify(data)
        })
        .then(response => response.json())
        .then(res => {
            if (res.success) {
                alert(res.message);
                location.reload();
            } else {
                alert('Error: ' + res.message);
            }
        })
        .catch(error => {
            console.error('Error:', error);
            alert('Failed to create user.');
        });
    }


    function openLoginHistory(userId, userName) {
        currentUserId = userId;
        document.getElementById('historyUserName').innerText = userName;
        loginHistoryModal.show();
        loadLoginHistory(userId, 'all');
    }

    function loadLoginHistory(userId, filter) {
        // Update active button state
        document.querySelectorAll('#loginHistoryModal .btn-group button').forEach(btn => btn.classList.remove('active'));
        if(filter === 'all') document.getElementById('filterAll').classList.add('active');
        if(filter === '7days') document.getElementById('filter7').classList.add('active');
        if(filter === '30days') document.getElementById('filter30').classList.add('active');

        // Show loading
        document.getElementById('loginHistoryContent').innerHTML = `
            <div class="text-center py-5">
                <div class="spinner-border text-primary" role="status">
                    <span class="visually-hidden">Loading...</span>
                </div>
            </div>`;

        // Fetch data
        fetch(`@Url.Action("GetLoginHistory", "User")?id=${userId}&filter=${filter}`)
            .then(response => response.text())
            .then(html => {
                document.getElementById('loginHistoryContent').innerHTML = html;
            })
            .catch(error => {
                console.error('Error:', error);
                document.getElementById('loginHistoryContent').innerHTML = `<p class="text-center text-danger py-3">Error loading history</p>`;
            });
    }
</script>

