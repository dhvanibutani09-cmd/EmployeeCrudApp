@model EmployeeCrudApp.Models.User

@using Microsoft.AspNetCore.Mvc.Localization
@inject IViewLocalizer Localizer
@{
    var role = ViewBag.Role as string;
    var title = role == "Admin" ? "Add New Admin" : (role == "User" || role == "Private" ? "Add New User" : "Add User Account");
    var btnText = role == "Admin" ? "Create Admin" : "Create User";
    ViewData["Title"] = Localizer[title];
}

<div class="row justify-content-center mt-5">
    <div class="col-md-6">
        <div class="card glass-card border-0 shadow-lg rounded-4 p-4">
            <div class="text-center mb-4">
                <div class="icon-circle bg-primary bg-opacity-25 text-primary mx-auto mb-3">
                    @if (role == "Admin")
                    {
                        <i class="bi bi-shield-lock-fill fs-3"></i>
                    }
                    else
                    {
                        <i class="bi bi-person-plus-fill fs-3"></i>
                    }
                </div>
                <h2 class="fw-bold">@Localizer[title]</h2>
                <p class="text-muted small">@Localizer["Create a new account for system access"]</p>
            </div>

            <form asp-action="Create">
                <div asp-validation-summary="ModelOnly" class="text-danger small mb-3"></div>

                <div class="mb-3">
                    <label asp-for="Name" class="form-label small text-muted text-uppercase fw-bold ls-1">@Localizer["Full Name"]</label>
                    <div class="input-group">
                        <span class="input-group-text bg-transparent border-end-0 text-muted"><i class="bi bi-person"></i></span>
                        <input asp-for="Name" class="form-control bg-transparent border-start-0 ps-2 text-start fw-bold" placeholder="@Localizer["Enter full name"]" />
                    </div>
                    <span asp-validation-for="Name" class="text-danger small"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="Email" class="form-label small text-muted text-uppercase fw-bold ls-1">@Localizer["Email Address"]</label>
                    <div class="input-group">
                        <span class="input-group-text bg-transparent border-end-0 text-muted"><i class="bi bi-envelope"></i></span>
                        <input asp-for="Email" class="form-control bg-transparent border-start-0 ps-2 text-start fw-bold" placeholder="@Localizer["name@example.com"]" />
                    </div>
                    <span asp-validation-for="Email" class="text-danger small"></span>
                </div>

                <div class="mb-4">
                    <label asp-for="Password" class="form-label small text-muted text-uppercase fw-bold ls-1">@Localizer["Password"]</label>
                    <div class="input-group">
                        <span class="input-group-text bg-transparent border-end-0 text-muted"><i class="bi bi-lock"></i></span>
                        <input asp-for="Password" type="password" class="form-control bg-transparent border-start-0 ps-2 text-start fw-bold" placeholder="@Localizer["Create a password"]" />
                    </div>
                    <span asp-validation-for="Password" class="text-danger small"></span>
                </div>


                <div class="mb-4">
                    <label asp-for="ConfirmPassword" class="form-label small text-muted text-uppercase fw-bold ls-1">@Localizer["Confirm Password"]</label>
                    <div class="input-group">
                        <span class="input-group-text bg-transparent border-end-0 text-muted"><i class="bi bi-lock-fill"></i></span>
                        <input asp-for="ConfirmPassword" type="password" class="form-control bg-transparent border-start-0 ps-2 text-start fw-bold" placeholder="@Localizer["Confirm your password"]" />
                    </div>
                    <span asp-validation-for="ConfirmPassword" class="text-danger small"></span>
                </div>


                <div class="mb-4">
                    <label class="form-label small text-muted text-uppercase fw-bold ls-1">@Localizer["User Role"]</label>
                    <div class="input-group">
                        <span class="input-group-text border-end-0 text-muted"><i class="bi bi-shield-shaded"></i></span>
                        <select name="role" id="user-role-select" class="form-select border-start-0 ps-2 fw-bold" required onchange="handleRoleChange(this.value)">
                            <option value="" selected="@(string.IsNullOrEmpty(role))" disabled>@Localizer["-- Select Role --"]</option>
                            <option value="Admin" selected="@(role == "Admin")">@Localizer["Admin User"]</option>
                            <option value="User" selected="@(role == "User")">@Localizer["Normal User"]</option>
                            <option value="Private" selected="@(role == "Private")">@Localizer["Private User"]</option>
                        </select>
                    </div>
                </div>

                <div class="mb-4">
                    <label class="form-label small text-muted text-uppercase fw-bold ls-1">@Localizer["Permitted Dashboard Widgets"]</label>
                    <div class="row g-2 p-3 bg-light rounded-4 border">
                        @{
                            var widgets = new[] { 
                                "Weather Details", "Currency Conversion", "Time Conversion", 
                                "Headlines / News", "World Countries", "Personal Notes", 
                                "Habit Tracker", "Emergency Numbers", "Language Translator",
                                "PDF Converter"
                            };
                        }
                        @foreach (var widget in widgets)
                        {
                            <div class="col-md-6">
                                <div class="form-check">
                                    <input class="form-check-input widget-checkbox" type="checkbox" name="PermittedWidgets" value="@widget" id="chk-@widget.Replace(" ", "-").Replace("/", "-")">
                                    <label class="form-check-label small fw-bold" for="chk-@widget.Replace(" ", "-").Replace("/", "-")">@Localizer[widget]</label>
                                </div>
                            </div>
                        }
                    </div>
                    <div class="small text-muted mt-2">@Localizer["Note: Admins have access to all widgets by default."]</div>
                </div>

                <div class="d-grid gap-2">
                    <button type="submit" class="btn btn-primary rounded-pill py-2 shadow-sm fw-bold">@Localizer[btnText]</button>
                    @if (ViewBag.Role == "Admin")
                    {
                        <a asp-action="AdminList" class="btn btn-outline-secondary rounded-pill py-2">@Localizer["Cancel"]</a>
                    }
                    else
                    {
                        <a asp-action="UserList" class="btn btn-outline-secondary rounded-pill py-2">@Localizer["Cancel"]</a>
                    }
                </div>
            </form>
        </div>
    </div>
</div>


@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
    <script>
        function handleRoleChange(role) {
            const checkboxes = document.querySelectorAll('.widget-checkbox');
            if (role === 'Admin') {
                checkboxes.forEach(cb => cb.checked = true);
            } else {
                checkboxes.forEach(cb => cb.checked = false);
            }
        }

        // Initialize checkboxes based on current selection (if any, e.g. on validation error)
        document.addEventListener('DOMContentLoaded', () => {
            const roleSelect = document.getElementById('user-role-select');
            if (roleSelect && roleSelect.value === 'Admin' && !document.querySelector('.widget-checkbox:checked')) {
                 handleRoleChange('Admin');
            }
        });
    </script>
}
