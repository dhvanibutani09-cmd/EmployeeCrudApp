@model EmployeeCrudApp.Models.User

@using Microsoft.AspNetCore.Mvc.Localization
@inject IViewLocalizer Localizer
@inject Microsoft.Extensions.Configuration.IConfiguration Configuration
@{
    ViewData["Title"] = Localizer["Edit User"];
    
    var currentUserEmail = User.FindFirst(System.Security.Claims.ClaimTypes.Name)?.Value;
    var adminEmails = Configuration.GetSection("AdminSettings:AdminEmails").Get<List<string>>();
    bool isSuperAdmin = adminEmails != null && !string.IsNullOrEmpty(currentUserEmail) && adminEmails.Contains(currentUserEmail);
}

<div class="row justify-content-center mt-5">
    <div class="col-md-6">
        <div class="card glass-card border-0 shadow-lg rounded-4 p-4">
            <div class="text-center mb-4">
                <div class="icon-circle bg-info bg-opacity-25 text-info mx-auto mb-3">
                    <i class="bi bi-pencil-square fs-3"></i>
                </div>
                <h2 class="fw-bold">@Localizer["Edit User"]</h2>
                <p class="text-muted small">@Localizer["Update account information"]</p>
            </div>

            <form asp-action="Edit">
                <div asp-validation-summary="ModelOnly" class="text-danger small mb-3"></div>
                <input type="hidden" asp-for="Id" />
                <input type="hidden" asp-for="Otp" />
                <input type="hidden" asp-for="OtpExpiry" />
                <input type="hidden" asp-for="RoleLocked" />
                <input type="hidden" asp-for="WidgetLocked" />
                <input type="hidden" asp-for="IsEditable" />

                <div class="mb-3">
                    <label asp-for="Name" class="form-label small text-muted text-uppercase fw-bold ls-1">@Localizer["Full Name"]</label>
                    <div class="input-group">
                        <span class="input-group-text bg-transparent border-end-0 text-muted"><i class="bi bi-person"></i></span>
                        <input asp-for="Name" class="form-control bg-transparent border-start-0 ps-0 fw-bold" />
                    </div>
                    <span asp-validation-for="Name" class="text-danger small"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="Email" class="form-label small text-muted text-uppercase fw-bold ls-1">@Localizer["Email Address"]</label>
                    <div class="input-group">
                        <span class="input-group-text bg-transparent border-end-0 text-muted"><i class="bi bi-envelope"></i></span>
                        <input asp-for="Email" class="form-control bg-transparent border-start-0 ps-0 fw-bold" />
                    </div>
                    <span asp-validation-for="Email" class="text-danger small"></span>
                </div>

                <div class="mb-4">
                    <label asp-for="Password" class="form-label small text-muted text-uppercase fw-bold ls-1">@Localizer["Password"]</label>
                    <div class="input-group">
                        <span class="input-group-text bg-transparent border-end-0 text-muted"><i class="bi bi-key"></i></span>
                        <input asp-for="Password" class="form-control bg-transparent border-start-0 ps-0 fw-bold" placeholder="@Localizer["Leave blank to keep current"]" />
                    </div>
                    <span asp-validation-for="Password" class="text-danger small"></span>
                </div>

                <div class="mb-4">
                    <label asp-for="ConfirmPassword" class="form-label small text-muted text-uppercase fw-bold ls-1">@Localizer["Confirm Password"]</label>
                    <div class="input-group">
                        <span class="input-group-text bg-transparent border-end-0 text-muted"><i class="bi bi-key-fill"></i></span>
                        <input asp-for="ConfirmPassword" class="form-control bg-transparent border-start-0 ps-0 fw-bold" placeholder="@Localizer["re-enter new password"]"/>
                    </div>
                    <span asp-validation-for="ConfirmPassword" class="text-danger small"></span>
                </div>

                <div class="mb-4">
                    <label asp-for="SecurityPin" class="form-label small text-muted text-uppercase fw-bold ls-1">@Localizer["Security PIN"]</label>
                    <div class="input-group">
                        <span class="input-group-text bg-transparent border-end-0 text-muted"><i class="bi bi-shield-lock"></i></span>
                        <input asp-for="SecurityPin" type="password" class="form-control bg-transparent border-start-0 ps-0 fw-bold" placeholder="@Localizer["4-6 Digit PIN"]" maxlength="6" />
                    </div>
                    <span asp-validation-for="SecurityPin" class="text-danger small"></span>
                    <div class="small text-muted mt-1">@Localizer["Leave blank to keep existing PIN."]</div>
                </div>


                <div class="form-check mb-4 bg-white bg-opacity-10 rounded-3 p-3 ps-5">
                    <input class="form-check-input" type="checkbox" asp-for="IsEmailVerified" id="chkVerified">
                    <label class="form-check-label fw-bold" for="chkVerified">
                        @Localizer["Email Verified"]
                    </label>
                    <div class="small text-muted">@Localizer["Unchecking this will require the user to verify again."]</div>
                </div>

                <div class="mb-4">
                    <label class="form-label small text-muted text-uppercase fw-bold ls-1">@Localizer["User Role"]</label>
                    <div class="input-group">
                        <span class="input-group-text border-end-0 text-muted"><i class="bi bi-shield-shaded"></i></span>
                        <select asp-for="RoleId" id="user-role-select" class="form-select border-start-0 ps-2 fw-bold" disabled="@(!isSuperAdmin && !Model.IsEditable ? "disabled" : null)">
                            <option value="1">@Localizer["Admin User"]</option>
                            <option value="2">@Localizer["Normal User"]</option>
                            <option value="3">@Localizer["Private User"]</option>
                            <option value="4">@Localizer["Visitor"]</option>
                        </select>
                        @if (!isSuperAdmin && !Model.IsEditable)
                        {
                            <span class="input-group-text bg-light border-start-0 text-muted" title="@Localizer["Role cannot be changed after creation"]">
                                <i class="bi bi-lock-fill"></i>
                            </span>
                        }
                    </div>
                    @if (!isSuperAdmin && !Model.IsEditable)
                    {
                        <div class="small text-muted mt-1">@Localizer["User role cannot be changed after creation."]</div>
                        <input type="hidden" asp-for="RoleId" />
                    }
                    <span asp-validation-for="RoleId" class="text-danger small"></span>
                </div>

                <div class="d-grid gap-2">
                    <button type="submit" class="btn btn-info rounded-pill py-2 shadow-sm fw-bold text-white">@Localizer["Save Changes"]</button>
                    @if (Model.Role == "Admin")
                    {
                        <a asp-action="AdminList" class="btn btn-outline-secondary rounded-pill py-2">@Localizer["Cancel"]</a>
                    }
                    else
                    {
                       <a asp-action="UserList" class="btn btn-outline-secondary rounded-pill py-2">@Localizer["Cancel"]</a>
                    }
                </div>
            </form>
        </div>
    </div>
</div>


@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
